{
  "request": {
    "method": "POST",
    "urlPathPattern": "/mailboxes/[^/]+/messages",
    "headers": {
      "Authorization": {
        "matches": "Bearer .+"
      },
      "Content-Type": {
        "contains": "application/json"
      }
    },
    "bodyPatterns": [
      { "matchesJsonPath": "$.to" },
      { "matchesJsonPath": "$.subject" },
      { "matchesJsonPath": "$.body" }
    ]
  },
  "response": {
    "status": 200,
    "headers": {
      "Content-Type": "application/json"
    },
    "jsonBody": {
      "message_id": "mocked-aruba-msg-id-9876",
      "status": "ACCEPTED",
      "accepted_at": "{{now format='yyyy-MM-dd\\'T\\'HH:mm:ss\\'Z\\''}}"
    },
    "transformers": ["response-template"]
  }
}
