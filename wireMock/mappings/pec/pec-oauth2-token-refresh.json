{
  "request": {
    "method": "POST",
    "urlPath": "/oauth2/token",
    "headers": {
      "Content-Type": {
        "contains": "application/x-www-form-urlencoded"
      }
    },
    "bodyPatterns": [
      { "contains": "grant_type=refresh_token" },
      { "contains": "refresh_token=" }
    ]
  },
  "response": {
    "status": 200,
    "headers": {
      "Content-Type": "application/json"
    },
    "jsonBody": {
      "access_token": "mocked-aruba-access-token-refreshed-xyz",
      "refresh_token": "mocked-aruba-refresh-token-refreshed-uvw",
      "token_type": "Bearer",
      "expires_in": 3600,
      "scope": "pec:read pec:write"
    }
  }
}
